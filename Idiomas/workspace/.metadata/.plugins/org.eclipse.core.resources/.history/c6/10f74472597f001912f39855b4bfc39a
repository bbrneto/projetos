package br.com.biscleta.ditado;

public class Principal {
	
	public static void main(String[] args) {
		String original = "Countries sign a new agreement.\n" + 
				"This agreement is about plastic pollution.\n" + 
				"The agreement limits plastic.\n" + 
				"There are 195 countries in the world.\n" + 
				"Almost every country signs the agreement.\n" + 
				"One hundred and eighty-seven countries sign it.\n" + 
				"The USA is one of the countries which does not sign.";
		
		String transcrito = "Countries sign a new agreement.\n" + 
				"This agreement is about plastic pollution.\n" + 
				"The agreement limits plastic.\n" + 
				"There are 195 countries in the world.\n" + 
				"Almost every country signs the agreement.\n" + 
				"One hundred and eighty-seven countries sign it.\n" + 
				"The USA is one of the countries which does not sign it.";
		
		System.out.println(original.equals(transcrito));
		
		String[] originalArray = original.split(" ");
		
		String[] transcritoArray = transcrito.split(" ");
		
		for (int i = 0; i < originalArray.length; i++) {
			if (!originalArray[i].equals(transcritoArray[i])) {
				System.out.println(originalArray[i]);
				System.out.println(transcritoArray[i]);
			}
		}
	}

}
