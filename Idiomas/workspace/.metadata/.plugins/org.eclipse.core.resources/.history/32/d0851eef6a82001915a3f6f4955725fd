package br.com.biscleta.ditado;

public class Principal {
	
	public static void main(String[] args) {
		String original = "The USA is a big country.\n" + 
				"One big region is the central USA.\n" + 
				"The weather is very bad there.\n" + 
				"In five days, there are 130 tornadoes.\n" + 
				"It rains a lot, too.\n" + 
				"In one day, 7.62 centimetres of rain comes down.\n" + 
				"The rain floods roads.\n" + 
				"It affects around 28 million people.";
		
		String transcrito = "The USA is a big country.\n" + 
				"One big region is the central USA.\n" + 
				"The weather is very bad there.\n" + 
				"In five days, there are 130 tornadoes.\n" + 
				"It rains a lot, too.\n" + 
				"In one day, 7.62 centimetres of rain comes down.\n" + 
				"The rain floods roads.\n" + 
				"It affects around 28 million people.";
		
		System.out.println(original.equals(transcrito));
		
		String[] originalArray = original.split(" ");
		
		String[] transcritoArray = transcrito.split(" ");
		
		for (int i = 0; i < originalArray.length; i++) {
			if (!originalArray[i].equals(transcritoArray[i])) {
				System.out.println(originalArray[i]);
				System.out.println(transcritoArray[i]);
				System.out.println();
			}
		}
	}

}
