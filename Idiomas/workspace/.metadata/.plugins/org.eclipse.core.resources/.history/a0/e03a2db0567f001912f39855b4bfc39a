package br.com.biscleta.ditado;

public class Principal {
	
	public static void main(String[] args) {
		String original = "This news is from the USA.\n" + 
				"It is about a problem.\n" + 
				"The problem is the young people commit suicide.\n" + 
				"Suicide is the second biggest killer of young people in the USA.\n" + 
				"People watch how many people commit suicide.\n" + 
				"The number of people goes up between 1975 and 2016.\n" + 
				"Boys commit suicide more than girls.\n" + 
				"However, this is changing.\n" + 
				"More and more girls are killing themselves.\n" + 
				"From 2007, more girls commit suicide every year.\n" + 
				"People do not know why.\n" + 
				"Some people say that more girls are committing suicide because of social media.";
		
		String transcrito = "This news is from the USA.\n" + 
				"It is about a problem.\n" + 
				"The problem is the young people commit suicide.\n" + 
				"Suicide is the second biggest killer of young people in USA.\n" + 
				"People watch how many people commit suicide.\n" + 
				"The number of people goes up between 1975 and 2016.\n" + 
				"Boys commit suicide more than girls.\n" + 
				"However, this is changing.\n" + 
				"More and more girls are killing themselves.\n" + 
				"From 2007, more girls commit suicide every year.\n" + 
				"People do not know why.\n" + 
				"Some people say that more girls are committing suicide because social media.";
		
		System.out.println(original.equals(transcrito));
		
		String[] originalArray = original.split(" ");
		
		String[] transcritoArray = transcrito.split(" ");
		
		for (int i = 0; i < originalArray.length; i++) {
			if (!originalArray[i].equals(transcritoArray[i])) {
				System.out.println(transcritoArray[i]);
			}
		}
	}

}
