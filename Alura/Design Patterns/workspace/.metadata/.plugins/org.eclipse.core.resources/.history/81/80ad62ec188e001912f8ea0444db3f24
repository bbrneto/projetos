package strategy;

// Tipo de estrat√©gia
public class ICCC implements Imposto {

	@Override
	public double calcula(Orcamento orcamento) {
		double valor = orcamento.getValor();

		if (valor < 1000) {
			return valor * 0.05;
		}

		if (valor >= 1000 && valor <= 3000) {
			return valor * 0.07;
		}

		return valor * 0.08 + 30;
	}

}
